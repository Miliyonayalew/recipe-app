<section>
  <h2>New Recipe</h2>
  <%= form_with model:Recipe do |f| %>
    <%= f.label :name%><br>
    <%= f.text_field :name, placeholder: 'Name', value: ''%><br>
    <%= f.label :preparation_time%><br>
    <%= f.number_field :preparation_time, placeholder: 'Preparation Time'%><br>
    <%= f.label :cooking_time%><br>
    <%= f.number_field :cooking_time, placeholder: 'Cooking Time'%><br>
    <%= f.label :description%><br>
    <%= f.text_area :description, placeholder: 'Description'%><br>
    <%= f.label :public%><br>
    <%= f.check_box :public, {}, true, false%><br>
    <%= f.submit "Create Recipe"%>
  <%end%>
</section>